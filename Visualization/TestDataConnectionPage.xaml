<Page x:Class="Visualization.TestDataConnectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Visualization" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestDataConnectionPage" Height="634.04" Width="720" MinWidth="820" MaxWidth="820" MinHeight="634.04" MaxHeight="634.04">

    <Page.DataContext>
        <local:ChatViewModel/>
    </Page.DataContext>

    <Grid>
        <StackPanel Grid.Column="1">
            <Button Height="55" DockPanel.Dock="Top" Content="Start chat" Command="{Binding ConnectToServerICommand}"/>
            <ListView Height="480" ItemsSource="{Binding Messages}"/>

            <StackPanel Orientation="Horizontal">
                <TextBox Name="InputTextbox" Height="55" Width="765" VerticalContentAlignment="Center" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Width="60" Content="Send" Command="{Binding SendMessageICommand}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
